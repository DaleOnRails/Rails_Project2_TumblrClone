<!-- comment/forms partial will be for creating new comments -->
<!-- this is the form for comments-->
<%= form_for([@post, @post.comments.build]) do |f| %>
<!-- #creates inputs for the name of person creating the comment
#plus area for body of the comment itself -->
    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
    </p>
    <br>
    <p>
        <%= f.submit %>
    </p>


<% end %>