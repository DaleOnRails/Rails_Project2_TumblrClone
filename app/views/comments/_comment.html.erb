<!-- comments partial will render the comments created from _form partial! -->

<div class="comment clearfix">
    <div class="comment_content">
        <p class="comment_name"><strong><%= comment.name %></strong></p>
        <p class="comment_body"><%= comment.body %></p>
        <p class="comment_title"><%= time_ago_in_words(comment.created_at) %> Ago</p>
    </div>

    <!-- renders the comment delete button onto the page with a pop up message(are you sure?) -->
    <p><%= link_to 'Delete', [comment.post, comment],method: :delete, class: "button", data: {
        confirm: 'Are you sure?' } %></p>
</div> 
